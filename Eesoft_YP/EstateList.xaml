                                <ColumnDefinition Width="1.1*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <TextBox x:Name="Latitude" Style="{DynamicResource Input}" Text="Широта" Grid.Column="0" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="{StaticResource Roboto-Regular}" Height="24" Width="90" GotFocus="Latitude_GotFocus" LostFocus="Latitude_LostFocus"/>
                            <TextBox x:Name="Longitude" Style="{DynamicResource Input}" Text="Долгота" Grid.Column="1" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="{StaticResource Roboto-Regular}" Height="24" Width="90" GotFocus="Longitude_GotFocus" LostFocus="Longitude_LostFocus"/>
                            <TextBox x:Name="Floor" Style="{DynamicResource Input}" Text="Этаж" Grid.Column="2" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="{StaticResource Roboto-Regular}" Height="24" Width="100" GotFocus="Floor_GotFocus" LostFocus="Floor_LostFocus"/>
                            <TextBox x:Name="TotalFloor" IsEnabled="False" Style="{DynamicResource Input}" Text="Этажность" Grid.Column="3" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="{StaticResource Roboto-Regular}" Height="24" Width="100" GotFocus="TotalFloor_GotFocus" LostFocus="TotalFloor_LostFocus"/>
                            <TextBox x:Name="Rooms" Style="{DynamicResource Input}" Text="Количество комнат" Grid.Column="4" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="{StaticResource Roboto-Regular}" Height="24" Width="100" GotFocus="Rooms_GotFocus" LostFocus="Rooms_LostFocus"/>
                            <TextBox x:Name="TotalArea" Style="{DynamicResource Input}" Text="Площадь" Grid.Column="5" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="{StaticResource Roboto-Regular}" Height="24" Width="80" GotFocus="TotalArea_GotFocus" LostFocus="TotalArea_LostFocus"/>

                        </Grid>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Height="auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" FlowDirection="LeftToRight">
                        <Grid MinWidth="667" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button BorderBrush="{StaticResource grey_2}" BorderThickness="1" Grid.Column="0" Margin="5,0,0,0" Height="24" Width="24" HorizontalAlignment="Left" Click="Refresh_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Resources/ic_sync_black_48dp.png"/>
                                </Button.Background>
                            </Button>

                            <Button Style="{DynamicResource MainButton}" Content="Добавить" Height="24" Width="80" Grid.Column="1" HorizontalAlignment="Right" Click="Adding_Click"/>

                            <Border BorderBrush="{StaticResource grey_2}" BorderThickness="1" Height="24" Width="140" Grid.Column="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="0.2*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="Search" BorderThickness="0" FontFamily="{StaticResource Roboto-Regular}" Foreground="{StaticResource grey_2}" FontSize="12px" Padding="5,0,0,0" MinWidth="115" Grid.Column="0" HorizontalAlignment="Left" VerticalContentAlignment="Center" TextChanged="Search_TextChanged"/>

                                    <StackPanel MinHeight="15" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button BorderThickness="0" Height="15" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button.Background>
                                                <ImageBrush ImageSource="/Resources/ic_filter_list_black_18dp.png" Stretch="None"/>
                                            </Button.Background>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <ScrollViewer Grid.Row="2" Height="auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource grey_1}" VerticalScrollBarVisibility="Hidden">
                        <StackPanel x:Name="Estate" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Vertical" Loaded="Estate_Loaded"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
